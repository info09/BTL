@model IEnumerable<Model.EF.Content>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var tag = (Model.EF.Tag)ViewBag.Tag;
}

<div class="breadcrumbs">
    <div class="container">
        <div class="breadcrumbs-main">
            <ol class="breadcrumb">
                <li><a href="/">Home</a></li>
                <li><a href="/tin-tuc">Tin tức</a></li>
                <li class="active">@tag.Name</li>
            </ol>
        </div>
    </div>
</div>
<br />
<div class="container no-padding">
    <div class="col-lg-12">
        <div class="row">
            <div class="col-md-9">
                <div class="col-lg-9">
                    <div class="row">

                        <div class="col-lg-12" style="margin-top: 10px;">
                            <div class="row">
                                <div class="col-lg-12 no-padding">
                                    <h3 class="page-header no-margin"> Tin tức</h3>

                                    @foreach (var item in Model)
                                    {
                                        <div class="row">
                                            <div class="col-md-4">
                                                <a href="/tin-tuc/@item.MetaTitle-@item.ID">
                                                    <img class="img-responsive img-thumbnail" style="min-height:160px;" src="@item.Image" alt="">
                                                </a>
                                            </div>
                                            <div class="col-md-8">
                                                <a href="/tin-tuc/@item.MetaTitle-@item.ID">
                                                    <h3 style="margin-top:0px;">@item.Name</h3>
                                                </a>
                                                <p style="color: #808080;">
                                                    @item.CreatedDate
                                                </p>
                                                @Html.Raw(item.Description)
                                                <a class="btn btn-primary" href="/tin-tuc/@item.MetaTitle-@item.ID">Xem thêm</a>
                                            </div>
                                        </div>
                                        <!-- /.row -->
                                        <hr />
                                    }
                                    <div class="clear"></div>

                                    <!--Phân trang-->
                                    @if (ViewBag.TotalPage > 1)
                                    {
                                        var pageDisplay = (int)ViewBag.MaxPage;
                                        int totalPage = (int)ViewBag.TotalPage;
                                        int currentPage = ((int)ViewBag.Page);

                                        // Create numeric links
                                        var startPageIndex = Math.Max(1, currentPage - pageDisplay / 2);
                                        var endPageIndex = Math.Min(totalPage, currentPage + pageDisplay / 2);

                                        var link = "/tag/" + tag.ID;
                                        <nav>
                                            <ul class="pagination">
                                                @if (currentPage > ViewBag.First)
                                                {
                                                    <li><a href="@link?page=@ViewBag.First" title="Trang đầu" class="first"><i class="fa fa-angle-double-left"></i></a></li>
                                                    <li>
                                                        <a href="@link?page=@ViewBag.Prev" title="Trang trước" class="prev"><i class="fa fa-angle-left"></i></a>
                                                    </li>

                                                }
                                                @for (int i = startPageIndex; i <= endPageIndex; i++)
                                                {
                                                    if (currentPage == i)
                                                    {

                                                        <li> <a href="@link?page=@i" class="active" title="Trang @i">@i</a></li>
                                                    }
                                                    else
                                                    {
                                                        <li><a href="@link?page=@i" title="Trang @i" class="pos">@i</a></li>
                                                    }
                                                }
                                                @if (currentPage < totalPage)
                                                {
                                                    <li><a href="@link?page=@ViewBag.Next" class="next" title="Trang sau"><i class="fa fa-angle-right"></i></a></li>
                                                    <li> <a href="@link?page=@ViewBag.Last" class="last" title="Trang cuối"><i class="fa fa-angle-double-right"></i></a></li>
                                                }

                                            </ul>
                                        </nav>

                                    }



                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



