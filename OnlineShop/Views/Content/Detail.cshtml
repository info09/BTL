@model Model.EF.Content
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var productCategory = (List<Model.EF.ProductCategory>)ViewBag.ProductCategory;
    var content = (List<Model.EF.Content>)ViewBag.Content;
}
<div class="breadcrumbs">
    <div class="container">
        <div class="breadcrumbs-main">
            <ol class="breadcrumb">
                <li><a href="/">Trang chủ</a></li>
                <li class="active">Tin tức</li>
            </ol>
        </div>
    </div>
</div>
<br />

<div class="container no-padding">
    <div class="col-lg-12">
        <div class="row">
            <div class="col-md-8">
                <div class="col-lg-9">
                    <div class="row">

                        <div class="col-lg-12" style="margin-top: 10px;">
                            <div class="row">
                                <div class="col-lg-12 no-padding">
                                    <h3 class="page-header no-margin"><i class="fa fa-book"></i> @Model.Name</h3>
                                    @Html.Raw(Model.Detail)
                                    <span style="font-weight:bold;">Tag:</span>


                                    @{
                                        var tag = (List<Model.EF.Tag>)ViewBag.Tags;
                                        foreach (var item in tag)
                                        {
                                            <a href="/tag/@item.ID">@item.Name</a> <span>,</span>
                                        }
                                    }
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 single-right">
                <div class="w_sidebar">
                    <section class="sky-form">
                        <div class="col-lg-12">
                            <div class="row">
                                <h4 class="title-box">Danh mục sản phẩm</h4>
                                <div class="column">

                                    <ul class="nav nav-pills nav-stacked">
                                        @foreach (var item in productCategory)
                                        {
                                            <li class="even mul">
                                                <a href="/san-pham/@item.MetaTitle-@item.ID">
                                                    <span>@item.Name</span>
                                                </a>
                                            </li>
                                        }
                                    </ul>

                                </div>
                            </div>

                            <div class="row">
                                <h4 class="title-box" style="background-color:#6da6b1;">Điểm tin</h4>
                                <div class="column">
                                    <ul class=" list-unstyled">
                                        @foreach (var item in content)
                                        {
                                            <li class="clearfix" style="border-bottom: 1px solid #eee8e8; padding:3px 0px;">
                                                <div style="float: left; margin-right:10px;">
                                                    <a href="/tin-tuc/@item.MetaTitle-@item.ID">
                                                        <img title="Tạo không gian làm việc hiệu quả với 5 bước đơn giản" src="@item.Image" alt="Tạo không gian làm việc hiệu quả với 5 bước đơn giản" class="img-thumbnail" style="width: 70px; height: 80px;" />
                                                    </a>
                                                </div>
                                                <a href="/tin-tuc/@item.MetaTitle-@item.ID">
                                                    @item.Name

                                                </a>
                                                <p style="color:#808080; font-style:italic;">
                                                    <span class="fa fa-calendar"> </span> @item.CreatedDate
                                                </p>
                                            </li>
                                        }

                                    </ul>

                                </div>
                            </div>
                        </div>


                    </section>

                </div>
            </div>
        </div>
    </div>
</div>
<br />

