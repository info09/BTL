@model PagedList.IPagedList<Model.EF.Menu>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

@section header{
    <h1>
        Danh sách Footer
    </h1>
    <ol class="breadcrumb">
        <li><a href="/Admin/Home/Index"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
        <li><a href="#">Quản lý chung</a></li>
        <li class="active">Danh sách Menu</li>
    </ol>
}

<section class="content">
    <div class="box">
        <div class="box-header with-border">


            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                        title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
                <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fa fa-times"></i>
                </button>
            </div>
        </div>
        <div class="box-body">

            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Danh sách menu
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            @using (Html.BeginForm("Index", "Menu", FormMethod.Get))
                            {
                                <div class="row form-group">
                                    <div class="col-lg-12">
                                        <div class="col-md-4">
                                            <input type="text" name="searchString" class="form-control" value="@ViewBag.SearchString" />
                                        </div>
                                        <div class="col-md-4">
                                            <button type="submit" class="btn btn-success">Tìm kiếm</button>
                                            <a href="/Admin/Menu/Create" class="btn btn-primary">Thêm mới</a>
                                        </div>
                                    </div>
                                </div>
                            }

                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Name</th>
                                            <th>URL</th>
                                            <th>Trạng thái</th>
                                            <th>#</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr id="row_@item.ID">

                                                <td>@item.ID</td>
                                                <td>@item.Text</td>
                                                <td>@item.Link</td>
                                                <td><a href="#" class="btn-active" data-id="@item.ID">@Html.Raw(@item.Status ? "<strong>Kích hoạt</strong>" : "Khoá")</a></td>
                                                <td>
                                                    <a href="/Admin/Menu/Edit/@item.ID">Sửa</a>
                                                    |
                                                    @Ajax.ActionLink("Xoá", "Delete", new { @id = item.ID }, new AjaxOptions
                                               {
                                                   Confirm = "Bạn có muốn xoá bản ghi này?",
                                                   OnComplete = "$('#row_" + @item.ID + "').remove()",
                                                   HttpMethod = "Delete"
                                               })
                                                </td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>
                                @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
                            </div>
                            <!-- /.table-responsive -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


